<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Extras_menu"
    android:background="@drawable/menu_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_centerInParent="true"
        android:gravity="center">
        
        <Button
            android:id="@+id/extra_privacy"
            android:layout_width="180dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:onClick="showPolicy"
            android:paddingBottom="9dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/extra_privacypolicy_btn" />

        <Button
            android:id="@+id/extra_credits"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:onClick="credits"
            android:paddingBottom="9dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/extra_credits_btn" />
        
        <Button
            android:id="@+id/estra_feedBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:onClick="feedBack"
            android:paddingBottom="9dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/extra_feedback_btn" />

    </LinearLayout>
    
    <ImageButton
        android:id="@+id/extr_muting"
        android:background="@null"
        android:src="@drawable/unmuted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="toggleMute"/>

</RelativeLayout>