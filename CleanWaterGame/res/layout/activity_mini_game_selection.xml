<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MiniGame_selection" >

    <Button
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:id="@+id/level_one"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="80dp" android:background="@drawable/blue_btn" android:onClick="openLevelOne"/>

    <Button
        android:id="@+id/level_two"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:background="@drawable/blue_btn"
        android:onClick="openLevelTwo"
        android:text="Act I" />

    <Button
        android:id="@+id/level_two"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_one"
        android:layout_below="@+id/level_one"
        android:layout_marginTop="103dp"
        android:background="@drawable/blue_btn"
        android:onClick="openTestLevel"
        android:text="Test" />
    
</RelativeLayout>