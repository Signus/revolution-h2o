<?xml version="1.0" encoding="utf-8"?>
<!-- Chris Card | This is for the backgrounds of the buttons in the main menu|
		5/15/13-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
		    <solid android:color="#4B68FF"/>
		    <corners android:radius="20px"/>
		
		</shape>
	</item>

	<!-- background -->
	<item android:bottom="3px"
		android:left="3px"
		android:right="3px"
		android:top="3px">

		<shape android:shape="rectangle">
			<solid android:color="#00CCFF"/>
		    <corners android:radius="18px"/>
		    
		</shape>

	</item>

	<!--  Left shadow -->
	<item>
		<shape android:shape="rectangle">
			<gradient android:angle="180"
				android:centerColor="#1F59FF"
				android:centerX="0.9"
				android:endColor="#4B68FF"
				android:startColor="#1F68FF"/>
				<corners android:radius="18px"/>
		</shape>
	</item>

	<!-- right shadow -->
	<item>
		<shape android:shape="rectangle">
			<gradient android:angle="360"
				android:centerColor="#1F59FF"
				android:centerX="0.9"
				android:endColor="#4B68FF"
				android:startColor="#1F68FF"/>
				<corners android:radius="18px"/>
		</shape>
	</item>

	<!-- top shadow -->
	<item>
		<shape android:shape="rectangle">
			<gradient android:angle="-90"
				android:centerColor="#1F59FF"
				android:centerX="0.9"
				android:endColor="#4B68FF"
				android:startColor="#1F68FF"
				android:type="linear"/>
				<corners android:radius="18px"/>
		</shape>
	</item>

	<!-- Bottom Shadow -->
	<item>
		<shape android:shape="rectangle">
			<gradient android:angle="90"
				android:centerColor="#1F59FF"
				android:centerX="0.9"
				android:endColor="#4B68FF"
				android:startColor="#1F68FF"
				android:type="linear"/>
				<corners android:radius="18px"/>
		</shape>
	</item>

</layer-list>